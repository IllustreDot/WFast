{
  "manifest_version": 3,
  "name": "Wfast",
  "version": "2.0",
  "description": "Switch from R.io, WCL & WoWProgress in a click for a character or a guild",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.wowprogress.com/*",
    "https://raider.io/*",
    "https://www.warcraftlogs.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.wowprogress.com/*",
        "https://raider.io/*",
        "https://www.warcraftlogs.com/*"
      ],
      "js": ["src/main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/rio.png",
        "assets/wlog.png",
        "assets/wowprogress.png"
      ],
      "matches": [
        "https://www.wowprogress.com/*",
        "https://raider.io/*",
        "https://www.warcraftlogs.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": ".",
      "strict_min_version": "109.0"
    }
  }
}
